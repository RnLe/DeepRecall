{
  "name": "deeprecall-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "DeepRecall - Multi-platform reference management and study app",
  "scripts": {
    "dev": "pnpm --filter @deeprecall/web run dev",
    "dev:desktop": "pnpm --filter @deeprecall/desktop run tauri:dev",
    "dev:mobile": "pnpm --filter @deeprecall/mobile run dev",
    "build": "pnpm --filter @deeprecall/web run build",
    "build:desktop": "pnpm --filter @deeprecall/desktop run tauri:build",
    "build:mobile": "pnpm --filter @deeprecall/mobile run build",
    "mobile:sync": "cd apps/mobile && pnpm cap:sync",
    "mobile:run:ios": "cd apps/mobile && pnpm cap:run:ios",
    "mobile:open:ios": "cd apps/mobile && pnpm cap:open:ios",
    "start": "pnpm --filter @deeprecall/web run start",
    "typecheck": "pnpm -r run typecheck",
    "lint": "pnpm -r run lint",
    "clean": "pnpm -r exec rm -rf node_modules .next dist .turbo"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.11.0",
  "dependencies": {
    "next": "^15.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
