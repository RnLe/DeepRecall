{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DeepRecall",
  "version": "0.1.0",
  "identifier": "com.renlephy.deeprecall",
  "build": {
    "beforeDevCommand": "echo 'Desktop app loads web app URL - no local dev server needed'",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "echo 'Desktop app loads web app URL - no build needed'",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "DeepRecall",
        "url": "https://deeprecall-production.up.railway.app",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "fullscreen": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      },
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "dialog:default",
            "fs:allow-read-file",
            "fs:allow-read-dir",
            "fs:allow-write-file",
            "fs:allow-exists"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {}
}
