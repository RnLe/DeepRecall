{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@deeprecall/core": ["../../packages/core/src"],
      "@deeprecall/core/*": ["../../packages/core/src/*"],
      "@deeprecall/ui": ["../../packages/ui/src"],
      "@deeprecall/ui/*": ["../../packages/ui/src/*"],
      "@deeprecall/data": ["../../packages/data/src"],
      "@deeprecall/data/*": ["../../packages/data/src/*"]
    },
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": ["next-env.d.ts", ".next/types/**/*.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
