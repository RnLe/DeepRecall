# Fastfile for DeepRecall iOS builds
default_platform(:ios)

platform :ios do
  desc "Build & upload to TestFlight"
  lane :beta do
    # 1) App Store Connect API key (from GitHub Secrets)
    api_key = app_store_connect_api_key(
      key_id:      ENV["ASC_KEY_ID"],
      issuer_id:   ENV["ASC_ISSUER_ID"],
      key_content: ENV["ASC_KEY_CONTENT"],   # base64 string
      is_key_content_base64: true
    )

    # 2) Code signing - certificates already installed manually
    # Skip Match since we install certificates directly in the workflow
    
    # 2a) Update project settings for manual signing
    update_code_signing_settings(
      use_automatic_signing: false,
      team_id: "R4B85344VH",
      bundle_identifier: "com.renlephy.deeprecall",
      path: "ios/App/App.xcodeproj",
      profile_name: "DeepRecall App Store"
    )

    # 3) Bump build number (monotonic)
    increment_build_number(
      xcodeproj: "ios/App/App.xcodeproj"
    )

    # 4) Archive (adjust scheme/workspace if your app differs)
    build_ios_app(
      workspace: "ios/App/App.xcworkspace",
      scheme: "App",
      configuration: "Release",
      export_method: "app-store",
      export_options: {
        provisioningProfiles: {
          "com.renlephy.deeprecall" => "DeepRecall App Store"
        }
      }
    )

    # 5) Upload to TestFlight
    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true,
      distribute_external: false, # set true + groups when you're ready
      apple_id: "6754611356"
    )
  end
end
